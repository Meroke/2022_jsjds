<launch>
  <!-- turtlebot_teleop_key already has its own built in velocity smoother -->
  <node pkg="robot_rc" type="turtlebot_teleop_key" name="turtlebot_teleop_key"  output="screen">
    <param name="scale_linear" value="0.2" type="double"/>
    <param name="scale_angular" value="0.9" type="double"/>
    <remap from="turtlebot_teleop_key/cmd_vel" to="/cmd_vel"/>
  </node>
</launch>
